@model ReviewItem

<div>
    <h2>
        @Model.Title
    </h2>
</div>
<div>
    @Html.Raw(Model.Text)

    <form style="display: inline-block;" id="form-@Model.Id" asp-area="Admin" asp-controller="ReviewItems" asp-action="Delete" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <a href="#" onclick="document.getElementById('form-@Model.Id').submit();">Delete</a>
    </form>
</div>